# VoxAssist Database Seeding Environment Variables
# Copy this file to .env.seeding and configure for your environment

# Source Database (Development/Local)
# This is where your current data lives
SOURCE_DATABASE_URL="postgresql://user:password@localhost:5432/voxassist_dev"

# Target Database (Production/Staging)
# This is where the data will be seeded to
TARGET_DATABASE_URL="postgresql://user:password@prod-host:5432/voxassist_prod"

# Seeding Configuration
NODE_ENV="production"
FORCE_SEEDING="false"

# Optional: Test Database for seeding tests
TEST_DATABASE_URL="file:./test-seeding.db"

# Platform-specific variables (uncomment as needed)

# Render
# RENDER="true"

# Heroku
# HEROKU_APP_NAME="your-app-name"

# Vercel
# VERCEL="true"

# Logging
LOG_LEVEL="info"

# Security (for sensitive data masking)
SEEDING_ENCRYPTION_KEY="your-encryption-key-here"
