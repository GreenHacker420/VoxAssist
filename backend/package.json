{
  "name": "voxassist-backend",
  "version": "1.0.0",
  "description": "VoxAssist Backend API - Express.js server for AI voice support",
  "main": "src/server.js",
  "scripts": {
    "start": "prisma generate && node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "NODE_ENV=test jest --testPathPattern=tests/unit --setupFilesAfterEnv=./tests/setup.js",
    "test:integration": "NODE_ENV=test jest --testPathPattern=tests/integration --setupFilesAfterEnv=./tests/setup.js",
    "test:all": "NODE_ENV=test jest --setupFilesAfterEnv=./tests/setup.js",
    "test:watch": "NODE_ENV=test jest --watch --setupFilesAfterEnv=./tests/setup.js",
    "test:coverage": "NODE_ENV=test jest --coverage --setupFilesAfterEnv=./tests/setup.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "build": "prisma generate && echo 'Backend build complete'",
    "test:load": "artillery run tests/load/load-test.yml",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:seed": "node src/database/seed.js",
    "db:studio": "prisma studio"
  },
  "dependencies": {
    "express": "^5.1.0",
    "@prisma/client": "^5.7.1",
    "redis": "^4.6.5",
    "jsonwebtoken": "^9.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "helmet": "^6.0.1",
    "express-rate-limit": "^6.7.0",
    "dotenv": "^16.0.3",
    "winston": "^3.8.2",
    "socket.io": "^4.6.1",
    "@google/generative-ai": "^0.1.3",
    "axios": "^1.3.4",
    "twilio": "^4.7.2",
    "multer": "^1.4.5-lts.1",
    "joi": "^17.9.2",
    "uuid": "^9.0.0",
    "express-validator": "^7.0.1",
    "compression": "^1.7.4",
    "express-slow-down": "^1.6.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "@types/jest": "^29.5.8",
    "jest-environment-node": "^29.7.0",
    "artillery": "^2.0.3",
    "nyc": "^15.1.0",
    "prisma": "^5.7.1"
  },
  "keywords": ["express", "api", "voice", "ai", "twilio", "gemini"],
  "author": "Harsh Hirawat",
  "license": "MIT"
}
